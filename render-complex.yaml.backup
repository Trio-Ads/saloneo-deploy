services:
  # Service unifi√© - Frontend + Backend
  - type: web
    name: saloneo-app
    env: node
    plan: starter
    region: frankfurt
    buildCommand: |
      echo "üöÄ Starting Saloneo build process..."
      
      # Install root dependencies
      echo "üì¶ Installing root dependencies..."
      npm install
      
      # Build frontend
      echo "üé® Building frontend..."
      cd beauty-flow
      npm ci --only=production
      npm run build
      cd ..
      
      # Build backend
      echo "‚öôÔ∏è Building backend..."
      cd beauty-flow-backend
      npm ci --only=production
      npm run build
      cd ..
      
      # Create necessary directories
      mkdir -p beauty-flow-backend/uploads
      mkdir -p beauty-flow-backend/dist/uploads
      
      echo "‚úÖ Build completed successfully!"
    startCommand: npm start
    healthCheckPath: /health
    autoDeploy: true
    envVars:
      # Environment
      - key: NODE_ENV
        value: production
      - key: PORT
        value: 10000
      
      # MongoDB
      - key: MONGODB_URI
        sync: false
      
      # JWT Configuration
      - key: JWT_SECRET
        generateValue: true
      - key: JWT_EXPIRES_IN
        value: 7d
      - key: JWT_REFRESH_SECRET
        generateValue: true
      - key: JWT_REFRESH_EXPIRES_IN
        value: 30d
      
      # File Upload
      - key: MAX_FILE_SIZE
        value: 5242880
      - key: UPLOAD_DIR
        value: uploads
      
      # Rate Limiting
      - key: RATE_LIMIT_WINDOW_MS
        value: 900000
      - key: RATE_LIMIT_MAX_REQUESTS
        value: 100
      
      # Logging
      - key: LOG_LEVEL
        value: info
      
      # CORS & Frontend
      - key: FRONTEND_URL
        fromService:
          type: web
          name: saloneo-app
          property: host
      
      # SATIM Payment (if needed)
      - key: SATIM_USERNAME
        sync: false
      - key: SATIM_PASSWORD
        sync: false
      - key: SATIM_BASE_URL
        value: https://test.satim.dz
      
      # Additional services (if needed)
      - key: STABILITY_AI_API_KEY
        sync: false
      - key: SMS_API_KEY
        sync: false
      
    # Disk storage for uploads
    disk:
      name: saloneo-uploads
      mountPath: /opt/render/project/src/beauty-flow-backend/uploads
      sizeGB: 1
